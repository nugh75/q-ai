# Database Configuration
DB_USER=user
DB_PASSWORD=change_me_in_production
DB_NAME=questionnaire_db
DB_PORT=5433

# Backend Configuration
BACKEND_PORT=8118
# CORS_ORIGINS: Lista di origins permessi (separati da virgola)
# Per WSL: usa l'IP WSL (es: 192.168.129.14)
# Per localhost: usa localhost
CORS_ORIGINS=http://192.168.129.14:5180,http://localhost:5180,http://localhost:5173

# Frontend Configuration
FRONTEND_PORT=5180
# VITE_API_URL: URL del backend
# Per WSL da Windows: usa IP WSL (es: http://192.168.129.14:8118)
# Per Docker interno: usa http://localhost:8118
VITE_API_URL=http://192.168.129.14:8118

# Cache Configuration
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

